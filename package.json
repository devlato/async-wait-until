{
  "name": "async-wait-until",
  "version": "1.3.0",
  "description": "Waits for a given predicate callback to return a truthy value and resolves",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "format": "prettier --write src .jest",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx,.json -c .eslintrc.js .",
    "test": "cross-env NODE_ENV=test jest",
    "test:ci": "npm run clean:coverage && cross-env NODE_ENV=test jest --coverage",
    "clean": "rimraf coverage dist",
    "__build": "mkdir -p dist/ && cp src/index.d.ts dist/ && cp src/waitUntil.js dist/index.js",
    "build": "tsc -p tsconfig.json",
    "build:ci": "npm run clean && npm run build",
    "pre-push": "npm run lint && npm run test:coverage",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devlato/async-wait-until.git"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json}": [
      "eslint -c ./.eslintrc.js --fix",
      "jest â€”-bail --color --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "keywords": [
    "apply",
    "when",
    "async",
    "then",
    "promise",
    "wait",
    "timeout",
    "interval",
    "until",
    "for",
    "while",
    "predicate",
    "resolve",
    "reject"
  ],
  "author": "devlato <npm@devlato.com> (https://devlato.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devlato/async-wait-until/issues"
  },
  "homepage": "https://github.com/devlato/async-wait-until#readme",
  "files": [
    "package.json",
    "README.md",
    ".gitignore",
    ".editorconfig",
    "src"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "browser-resolve": "^2.0.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 4",
    "npm": ">= 2"
  }
}
